{
  "license": "MIT",
  "dependencies": {
    "axios": "^0.16.2",
    "fb": "^2.0.0",
    "@syncano/core": "^0.7.1"
  },
  "scripts": {
    "build": "npm && npm run build:src && npm run build:env",
    "build:src": "sh ./bin/compile",
    "build:env": "sh ./bin/compile-env",
    "test": "npm-run-all --parallel test:lint test:e2e:coverage",
    "test:e2e-single": "cross-env NODE_ENV=test mocha -s 1800 --reporter spec --require babel-register --timeout 4000",
    "test:e2e-single:coverage": "nyc --produce-source-map=true cross-env NODE_ENV=test mocha -s 1800 --reporter spec --require babel-register --timeout 4000",
    "test:e2e": "npm run test:e2e-single -- 'test/*.test.js'",
    "test:e2e:coverage": "nyc --produce-source-map=true npm run test:e2e",
    "test:lint": "standard --fix"
  },
  "devDependencies": {
    "@syncano/test": "^0.7.1",
    "@syncano/test-tools": "^0.7.1",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.1",
    "mocha": "^3.5.3",
    "mockery": "^2.1.0",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "sinon": "^3.3.0",
    "standard": "^10.0.3"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
